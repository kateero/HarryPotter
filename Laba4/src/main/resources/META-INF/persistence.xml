<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence                                  http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="Lab4PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- Сущности можно явно перечислить или использовать сканирование -->
    <class>Entities.Wizard</class>
    <class>Entities.Wand</class>
    <class>Entities.Delivery</class>
    <class>Entities.DeliveryDetails</class>
    <class>Entities.Component</class>
    <properties>
      <!-- JDBC настройки -->
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/Lab4?currentSchema=harrypotter"/>
      <property name="javax.persistence.jdbc.user" value="katya"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
      <!-- Hibernate настройки -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="none"/>
      <!-- или validate/update/create для автообновления схемы -->
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
